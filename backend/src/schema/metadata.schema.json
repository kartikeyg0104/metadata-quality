{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metadata-quality-platform.org/schemas/metadata.schema.json",
  "title": "Dataset Metadata Schema",
  "description": "JSON Schema for validating open dataset metadata structure",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the dataset",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "A detailed description of the dataset content, scope, and purpose"
    },
    "authors": {
      "type": "array",
      "description": "List of dataset authors or contributors",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "orcid": { "type": "string", "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[\\dX]$" },
              "affiliation": { "type": "string" }
            },
            "required": ["name"]
          }
        ]
      }
    },
    "keywords": {
      "type": "array",
      "description": "Keywords or tags describing the dataset",
      "items": { "type": "string" }
    },
    "license": {
      "type": "string",
      "description": "License identifier (preferably SPDX identifier)"
    },
    "publisher": {
      "type": "string",
      "description": "Organization or entity publishing the dataset"
    },
    "publication_date": {
      "type": "string",
      "description": "Date when the dataset was published",
      "format": "date"
    },
    "version": {
      "type": "string",
      "description": "Version identifier for the dataset"
    },
    "doi": {
      "type": "string",
      "description": "Digital Object Identifier",
      "pattern": "^10\\.\\d{4,}/[^\\s]+$"
    },
    "methodology": {
      "type": "string",
      "description": "Description of data collection and processing methods"
    },
    "funding": {
      "type": "string",
      "description": "Funding source or grant information"
    },
    "temporal_coverage": {
      "type": "object",
      "description": "Time period covered by the dataset",
      "properties": {
        "start_date": { "type": "string", "format": "date" },
        "end_date": { "type": "string", "format": "date" }
      }
    },
    "spatial_coverage": {
      "type": "string",
      "description": "Geographic area covered by the dataset"
    },
    "data_format": {
      "type": "array",
      "description": "File formats available for the dataset",
      "items": { "type": "string" }
    },
    "access_url": {
      "type": "string",
      "description": "URL where the dataset can be accessed",
      "format": "uri"
    },
    "contact_email": {
      "type": "string",
      "description": "Email address for dataset inquiries",
      "format": "email"
    },
    "citations": {
      "type": "array",
      "description": "Related publications or citations",
      "items": { "type": "string" }
    },
    "related_datasets": {
      "type": "array",
      "description": "Links to related datasets",
      "items": { "type": "string" }
    }
  },
  "required": ["title"],
  "additionalProperties": true
}
